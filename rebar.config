%% -*- mode: erlang -*-

{erl_opts, [debug_info]}.

{deps, [{cowboy, "1.1.2"},
        {hackney, "1.12.0"},
        {jiffy, "0.15.1"}]}.

{overrides,
 [{override, jiffy,
   [
    {plugins, [pc]},
    {artifacts, ["priv/jiffy.so"]},
    {provider_hooks,
     [
      {post,
       [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
       ]
      }]
    }
   ]}
 ]}.
